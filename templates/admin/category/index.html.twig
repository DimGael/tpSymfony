{% extends 'admin/base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.image }}</td>
                <td>
                    <a role = "button" class="btn btn-primary" href="{{ path('category_show', {'id': category.id}) }}">show</a>
                    <a role = "button" class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a role="button" class="btn btn-primary" href="{{ path('category_new') }}">Create new</a>
{% endblock %}
